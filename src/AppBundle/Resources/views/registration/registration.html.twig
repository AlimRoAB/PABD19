{% extends 'base.html.twig' %}

{% block title %} PABD19 Registration {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
{% endblock %}

{% block body %}
    <div class="wrapper">
        <form class="form-signin" method="POST" action="{{ path('register') }}">
            <h2 class="form-signin-heading">Register</h2>
            <input type="email" class="form-control" name="_username" placeholder="Email Address"  autofocus="" />
            {% for error in errors %}
                {% if error.propertyPath == 'email' %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
            {% endfor %}
            <input type="password" class="form-control" name="_password" placeholder="Password" />
            {% for error in errors %}
                {% if error.propertyPath == 'password' %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
            {% endfor %}
            <input type="password" class="form-control" name="_confirm_password" placeholder="Confirm password" />
            {% for error in errors %}
                {% if error.propertyPath == 'confirmPassword' %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
            {% endfor %}
            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        </form>
    </div>
{% endblock %}